---
import BaseLayout from "@lib/layouts/BaseLayout.astro";
import GridDisplay from "@lib/layouts/GridDisplay.astro";
const images = await Astro.glob("@assets/squares/*").then((files) => {
    return files.map((file) => file.default);
});
---

<!-- <WorksLayout title="sharing squares"> -->
<BaseLayout title="sharing squares">
    <GridDisplay>
        {
            images.map((img) => {
                return (
                    <img
                        src={img.src}
                        width={img.width}
                        height={img.height}
                        loading="lazy"
                    />
                );
            })
        }
    </GridDisplay>
</BaseLayout>
<!-- </WorksLayout> -->

<style>
    img {
        height: auto;
        aspect-ratio: 1/1;
    }
</style>
