---
import GridDisplay from "@lib/layouts/GridDisplay.astro";
import WorksLayout from "@lib/layouts/WorksLayout.astro";
const images = await Astro.glob("/src/assets/squares/*").then((files) => {
    return files.map((file) => file.default);
});
---

<WorksLayout title="sharing squares">
    <GridDisplay>
        {
            images.map((img) => {
                return (
                    <img
                        src={img.src}
                        width={img.width}
                        height={img.height}
                        loading="lazy"
                    />
                );
            })
        }
    </GridDisplay>
</WorksLayout>

<style>
    img {
        height: auto;
        aspect-ratio: 1/1;
    }
</style>
