---
import Card from "@lib/components/card/Card.astro";
import BaseLayout from "@lib/layouts/BaseLayout.astro";

import filterMans from "src/assets/filter/img/filter5.jpeg";
import seedPoster from "src/assets/seed/img/seed6.jpeg";
import loopPoster from "src/assets/gen/posters/loop20.jpeg";
import draftPoster from "src/assets/draft/img/draft4.jpeg";
import squaresPoster from "src/assets/squares/even-series-1.13.jpeg";
import GridDisplay from "@lib/layouts/GridDisplay.astro";
---

<BaseLayout title="works">
    <div>
        <GridDisplay>
            <a href="/works/loops" data-row="5" data-column="3" title="loooops">
                <Card variant="inverse" bgColor="primary">
                    <img
                        src={loopPoster.src}
                        slot="illustration"
                        width={512}
                        height={512}
                        style="object-fit: cover;transform:scale(1.25)"
                    />
                </Card>
            </a>
            <a href="/works/filter" data-column="3" data-row="6" title="filter">
                <Card>
                    <img
                        src={filterMans.src}
                        slot="illustration"
                        width={512}
                        height={512}
                        style="object-fit: cover; transform:scale(1.25) translateY(10%)"
                    />
                </Card>
            </a>
            <a href="/works/snap-seed" title="snap seeds">
                <Card>
                    <img
                        src={seedPoster.src}
                        slot="illustration"
                        width={512}
                        height={512}
                        style="object-fit: conver;"
                    />
                </Card>
            </a>
            <a href="/works/sharing-squares" title="sq">
                <Card>
                    <img
                        src={squaresPoster.src}
                        slot="illustration"
                        width={512}
                        height={512}
                        style=""
                    />
                </Card>
            </a>
            <a href="/works/draft" title="illustration drafts">
                <Card>
                    <img
                        src={draftPoster.src}
                        slot="illustration"
                        width={512}
                        height={512}
                        style="object-fit: cover;"
                    />
                </Card>
            </a>
        </GridDisplay>
    </div>
</BaseLayout>

<style>
    div {
        display: contents;
    }

    a {
        transition: 125ms ease opacity;
    }

    div:has(a:hover) a {
        opacity: 0.6;
    }
    div:has(a:hover) a:hover {
        opacity: unset;
    }
</style>
