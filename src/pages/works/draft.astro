---
import WorksLayout from "@lib/layouts/WorksLayout.astro";
const images = await Astro.glob("/src/assets/draft/img/*").then((files) => {
    return files.map((file) => file.default);
});
---

<WorksLayout title="draft">
    <div class="draft-grid">
        {
            images.map((img) => {
                return (
                    <img
                        src={img.src}
                        width={1024}
                        height={1024}
                        loading="lazy"
                    />
                );
            })
        }
    </div>
</WorksLayout>

<style>
    .draft-grid {
        display: grid;
        gap: 8px;
        grid-template-columns: repeat(2, 1fr);
        /* grid-template-columns: repeat(auto-fit, minmax(384px, 1fr)); */
        /* grid-auto-rows: 384px; */
    }

    .draft-grid img {
        height: 100%;
        width: 100%;
    }
    @media (max-width: 1024px) {
        .draft-grid {
            grid-template-columns: 1fr;
        }
    }
</style>
