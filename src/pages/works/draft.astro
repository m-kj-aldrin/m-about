---
import BaseLayout from "@lib/layouts/BaseLayout.astro";
import GridDisplay from "@lib/layouts/GridDisplay.astro";
import WorksLayout from "@lib/layouts/WorksLayout.astro";
const images = await Astro.glob("/src/assets/draft/img/*").then((files) => {
    return files.map((file) => file.default);
});
---

<!-- <WorksLayout title="draft"> -->
<BaseLayout title="illustration drafts">
    <GridDisplay>
        {
            images.map((img) => {
                return (
                    <img
                        src={img.src}
                        width={1024}
                        height={1024}
                        loading="lazy"
                    />
                );
            })
        }
    </GridDisplay>
</BaseLayout>
<!-- </WorksLayout> -->

<style>
    img {
        height: 100%;
        width: 100%;
    }
</style>
