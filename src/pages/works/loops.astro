---
import BaseLayout from "@lib/layouts/BaseLayout.astro";
import GridDisplay from "@lib/layouts/GridDisplay.astro";
const videos = await Astro.glob("@assets/gen/video/*").then((files) =>
    files.map((file) => file.default)
);
const posters = await Astro.glob("@assets/gen/posters/*").then((files) =>
    files.map((file) => {
        return file.default;
    })
);
---

<BaseLayout title="loops">
    <GridDisplay>
        {
            videos.map((video, i) => {
                return (
                    <video
                        playsinline
                        controls
                        loop
                        preload="none"
                        poster={posters[i].src}
                        src={video}
                        width="512"
                        height="512"
                    />
                );
            })
        }
    </GridDisplay>
</BaseLayout>

<style>
    video {
        width: 100%;
        height: auto;
        aspect-ratio: 1/1;

        object-fit: contain !important;
    }
</style>
