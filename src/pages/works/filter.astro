---
import BaseLayout from "@lib/layouts/BaseLayout.astro";
import GridDisplay from "@lib/layouts/GridDisplay.astro";
const images = await Astro.glob("@assets/filter/img/*").then((files) =>
    files.map((file) => file.default),
);
---

<BaseLayout title="filter">
    <GridDisplay>
        {
            images.map((image) => {
                return (
                    <img
                        src={image.src}
                        width={1024}
                        height={1024}
                        loading="lazy"
                    />
                );
            })
        }
    </GridDisplay>
</BaseLayout>

<style>
    img {
        height: 100%;
        aspect-ratio: 1/1;
    }
</style>
