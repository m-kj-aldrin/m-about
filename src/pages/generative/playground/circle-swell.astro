---
import Animate from "@lib/components/svg/animations/Animate.astro";
import G from "@lib/components/svg/builtin/G.astro";
import BaseLayout from "@lib/layouts/BaseLayout.astro";
---

<BaseLayout title="playground:circle-swell" fullScreen={true}>
  <svg viewBox="0 0 100 100">
    <G translate={[50, 50]}>
      <circle fill="hsl(var(--color-dark))" r="30" filter="url(#fe-erode2)">
        <Animate id="ani1" attributeName="r" from={0} to={30} begin="ani0.end" dur="1s" repeatCount={1} />
      </circle>
      <circle fill="hsl(var(--color-light))" filter="url(#fe-erode)">
        <Animate id="ani0" attributeName="r" from={0} to={30} begin="0s;ani1.end" dur="1s" repeatCount={1} />
      </circle>
    </G>

    <defs>
      <filter id="fe-erode">
        <feGaussianBlur stdDeviation="0.1"></feGaussianBlur>
      </filter>
      <filter id="fe-erode2">
        <feGaussianBlur stdDeviation="0.1"></feGaussianBlur>
      </filter>
    </defs>
  </svg>
</BaseLayout>

<style>
  svg {
    width: 100%;
    height: 100%;

    border: 1px currentColor dashed;
  }
</style>
