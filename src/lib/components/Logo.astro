<style>
    .text {
        border-radius: 4px;

        background-color: hsla(var(--color-offset), 1);
        padding: 4px 8px;
        font-size: 14px;

        position: relative;

        overflow: hidden;
    }

    .nowrap {
        white-space: nowrap;
    }

    .text {
        word-spacing: initial;
        text-transform: uppercase;
        line-height: 0.8;
        color: hsl(var(--color-light));
        font-weight: 200;
        font-style: italic;
    }
    .text .outer {
        overflow: hidden;
        /* outline: 1px red solid; */
        display: block;
    }

    .text .inner {
        display: grid;
        grid-template-columns: 1fr;
        /* outline: 1px black solid; */
    }

    .text .inner > * {
        grid-column: 1;
        grid-row: 1;
    }

    .text .outer span {
        display: inline-block;
        animation-name: wiggle;
        animation-duration: 5000ms;
        animation-iteration-count: infinite;
    }

    .text .outer span:first-of-type {
        --x: 2px;
    }
    .text .outer span:last-of-type {
        --x: -2px;
        /* animation-delay: 75ms; */
    }

    .text .hidden {
        transform: translateX(-200%);
    }

    .text .smiley {
        transform: translateX(-100%);
        text-align: center;
        align-self: center;
        font-size: 28px;
    }
    .inner {
        transform: translateX(100%);
        animation-name: smiley;
        animation-duration: 10000ms;
        animation-iteration-count: infinite;
    }

    @keyframes smiley {
        0% {
            transform: translate(0px);
        }
        50% {
            transform: translateX(0px);
        }
        51.25% {
            transform: translateX(100%);
        }
        52.5% {
            transform: translateX(100%);
        }
        53.75% {
            transform: translateX(0px);
        }
        100% {
            transform: translateX(0px);
        }
    }

    @keyframes wiggle {
        40% {
            transform: translateX(0px);
        }
        50% {
            transform: translateX(var(--x, 0px));
        }
        60% {
            transform: translateX(0px);
        }
    }
</style>
