---
interface Props {
  templateColumns?: string;
}

const { templateColumns } = Astro.props;
---

<div class="grid">
  <slot />
</div>

<style define:vars={{ templateColumns }}>
  .grid {
    display: grid;
    grid-template-columns: var(--templateColumns);
    grid-auto-rows: 384px;
    gap: 32px;
  }
</style>

<style is:global>
  .grid {
    > * {
      height: 100%;
      width: 100%;
    }
    /* COL */
    > [col-start="1"] {
      grid-column: 1;
    }
    > [col-start="2"] {
      grid-column: 2;
    }
    > [col-start="2"] {
      grid-column: 2;
    }
    > [col-start="3"] {
      grid-column: 3;
    }
    > [col-start="4"] {
      grid-column: 4;
    }
    > [col-start="5"] {
      grid-column: 5;
    }
    > [col-span="full"] {
      grid-column: 1/-1;
    }
    > [col-span="1"] {
      grid-column: span 1;
    }
    > [col-span="2"] {
      grid-column: span 2;
    }
    > [col-span="3"] {
      grid-column: span 3;
    }
    > [col-span="4"] {
      grid-column: span 4;
    }
    > [col-span="5"] {
      grid-column: span 5;
    }
    /* ROW */
    > [row-start="1"] {
      grid-row: 1;
    }
    > [row-start="2"] {
      grid-row: 2;
    }
    > [row-start="2"] {
      grid-row: 2;
    }
    > [row-start="3"] {
      grid-row: 3;
    }
    > [row-start="4"] {
      grid-row: 4;
    }
    > [row-start="5"] {
      grid-row: 5;
    }
    > [row-span="1"] {
      grid-row: span 1;
    }
    > [row-span="2"] {
      grid-row: span 2;
    }
    > [row-span="3"] {
      grid-row: span 3;
    }
    > [row-span="4"] {
      grid-row: span 4;
    }
    > [row-span="5"] {
      grid-row: span 5;
    }
  }
</style>
