---
import { type SVGProps, type Vec2 } from "@lib/types/svg";
interface Props extends SVGProps {
    pos?: Vec2;
    size?: Vec2;
    rx?: number;
    center?: boolean;
}
const {
    rx,
    pos = [0, 0],
    size = [4, 4],
    center = false,
    ...rest
} = Astro.props;
---

<rect
    rx={rx && rx}
    width={size[0]}
    height={size[1]}
    x={pos[0] - (center && size[0] / 2)}
    y={pos[1] - (center && size[1] / 2)}
    {...rest}></rect>
