---
type TransformType = "rotate" | "translate" | "scale";
type BeginType = number | string | `${string}.begin` | `${string}.end` | `${string}.click` | `${string}.mouseover` | `${string}.mousedown` | `${string}.mouseup`;

interface Props {
  type: TransformType;
  from?: string;
  to?: string;
  values?: string;
  dur: number;
  repeatCount: number | "indefinite";
  keyTimes?: string;
  keySplines?: string;
  calcMode?: "linear" | "discrete" | "paced" | "spline";
  begin?: BeginType;
  fill?: "remove" | "freeze";
  id?: string;
  accumulate?: "none" | "sum";
  additive?: "replace" | "sum";
}

const {dur:_dur,begin:_begin,...attrs} = Astro.props as Props;

const dur = `${_dur}ms`;
const begin = typeof _begin === "number" ? `${_begin}ms` : _begin;
---

<animateTransform
  attributeName="transform"
  attributeType="XML"
  {dur}
  {begin}
  {...attrs}
  </animateTransform>
